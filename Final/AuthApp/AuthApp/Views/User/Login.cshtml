@model UserLoginViewModel;
@{
    ViewData["Title"] = "Login";
    ViewData["HideNav"] = true;
}

<form asp-controller="User" asp-action="Login" method="POST" class="form-container">
    <div class="text-container">
        <h1>Glad to see you!</h1>
        <p>Welcome, please fill in the blanks for Login</p>
    </div>

    <div class="sign-up">
        <h1 class="heading">Hello, friend!</h1>

        <div class="text">
            <img src="https://i.postimg.cc/DZBPRgvC/email.png" alt="icon" height="12">
            @Html.TextBoxFor(m => m.Email, new {@type = "email", @placeholder = "Email"})
            <span class="text-danger">
                @Html.ValidationMessageFor(m => m.Email)
            </span>
        </div>

        <div class="text">
            <img src="https://i.postimg.cc/Nj5SDK4q/password.png" alt="icon" height="20">
            @Html.TextBoxFor(m => m.Password, new {@type = "password", @placeholder = "Password"})
            <span class="text-danger">
                @Html.ValidationMessageFor(m => m.Password)
            </span>
        </div>

        <button type="submit">LOGIN</button>
        <p class="conditions">
            Don't have an account? 
            <a asp-controller="User" asp-action="Register">Register</a>
        </p>
    </div>

</form>

