@model ExampleMVCApp.DTO.ProductUpdateDTO;

@{
    ViewData["Title"] = "Product Page";
}


<form asp-controller="Product" asp-action="UpdateProduct" method="post">
    <div>
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <br />

    <div>
        @Html.LabelFor(m => m.Price)
        @Html.TextBoxFor(m => m.Price, new {@class = "form-control"})
        <span class="text-danger">
            @Html.ValidationMessageFor(m => m.Price)
        </span>
    </div>
    <br />

    <div>
        @Html.LabelFor(m => m.ImageUrl)
        @Html.TextBoxFor(m => m.ImageUrl, new {@class = "form-control"})
        <span class="text-danger">
            @Html.ValidationMessageFor(m => m.ImageUrl)
        </span>
    </div>
    <br />

    <div>
        @Html.LabelFor(m => m.StockQuantity)
        @Html.TextBoxFor(m => m.StockQuantity, new {@class = "form-control"})
        <span class="text-danger">
            @Html.ValidationMessageFor(m => m.StockQuantity)
        </span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>

